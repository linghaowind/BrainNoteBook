.imglist{

  text-align: center;
  
  }
  
  .imglist .imgicon{
  
  width: 200px;
  
  height: 200px;
  
  margin: 20px;
  
  }

  .imglist .imgitem{

    width: 700rpx;
  
    height: 415rpx;
  
    margin: 20rpx;
  
  }
  .imglist .imgitem{

    width: 100%;
  
  }

  .imglist .imgfull{

    width: 100%;
  
    height: 100px;
  
  }

  #wxmlinfo{

    background-color: #118309;
  
  }
  
  #studyweapp{
  
    background-image: url(https://hackwork.oss-cn-shanghai.aliyuncs.com/lesson/weapp/4/bg.png);
  
    background-size: cover;
  
    background-repeat: no-repeat;
  
  }

  .imglist .img{

    border-radius: 8px;
  
    box-shadow: 5px 8px 30px rgba(53,178,225,0.26);
  
  }

  .imglist .circle{

    width: 200px;
  
    height: 200px;
  
    border-radius: 100%;
  
  }